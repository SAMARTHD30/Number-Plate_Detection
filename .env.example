# API Configuration
API_VERSION=1.0.0
API_TITLE="License Plate Detection API"
API_DESCRIPTION="FastAPI-based REST API for license plate detection"
DEBUG=False

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0

# Rate Limiting
RATE_LIMIT_TIMES=10
RATE_LIMIT_MINUTES=1

# CORS Configuration
CORS_ORIGINS=["https://your-domain.com"]
CORS_METHODS=["*"]
CORS_HEADERS=["*"]

# Security
SSL_KEYFILE=/path/to/your/private.key
SSL_CERTFILE=/path/to/your/certificate.crt

# Image Processing
MAX_IMAGE_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=[".jpg", ".jpeg", ".png"]
IMAGE_SAVE_PATH="./images"
TEMP_UPLOAD_DIR="./temp"

# Logging
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"
ACCESS_LOG="./logs/access.log"
ERROR_LOG="./logs/error.log"

# Optional: External Services Configuration
# OCR_API_KEY=your_api_key_here
# CLOUD_STORAGE_KEY=your_storage_key_here